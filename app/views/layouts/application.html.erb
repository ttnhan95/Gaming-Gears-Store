<!DOCTYPE html>
<html>
<head>
  <title>Gaming Gear Store</title>
  <%= stylesheet_link_tag    "application", media: "all",
                             "data-turbolinks-track" => 'reload' %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">GGGEAR</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/"><%= t('.home') %></a></li>
      <li><a href="/faq"><%= t('.questions') %></a></li>
      <li><a href="/news"><%= t('.news') %></a></li>
      <li><a href="/contact"><%= t('.contact') %></a></li>
    </ul>

  </div>
</nav>
<div id="columns">
  <div class="side-menu">

    <nav class="navbar navbar-default" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <% if session[:user_id] %>
            <%else%>
        <div class="brand-wrapper">
          <!-- Hamburger -->
          <button type="button" class="navbar-toggle">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <!-- Brand -->
          <div class="brand-name-wrapper">

          <!-- Search body -->
          <div id="search">
            <div class="panel-body">
              <%= form_tag "", :method => 'get', class: 'navbar-form' do %>
                <div class="form-group">
                  <%= text_field_tag :search, params[:search] %>
                </div>
                <button type="submit" class="btn btn-default "><span class="glyphicon glyphicon-search"></span></button>
              <% end %>
            </div>
          </div>
        </div>
          <%end%>

      </div>

      <!-- Main Menu -->
      <div class="side-menu-container">

        <% if session[:user_id] %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Orders',   orders_path   %></li>
              <li><%= link_to 'Products', products_path %></li>
              <li><%= link_to 'Categories',    categories_path    %></li>
              <li><%= link_to 'Users',    users_path    %></li>
              <li><%= link_to 'Logout', logout_path, method: :delete   %></li>
            </ul>
        <% else %>
            <ul class="nav navbar-nav">

              <li><%= link_to "Advanced Search", new_search_path %></li>

              <li>
                <% if @cart %>
                    <%= hidden_div_if(@cart.cart_products.empty?, id: 'cart') do %>
                        <%= render @cart %>
                    <% end %>
                <% end %>
              </li>

            </ul>

        <% end %>
      </div><!-- /.navbar-collapse -->
      </div>
    </nav>

  </div>
  <div id="side">

  </div>
  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>
